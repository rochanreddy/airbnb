<% layout("/layouts/boilerplate") %>
<body>
    <div class="col-6 offset-2">
    <h3>create a new listings</h3>
    <form action="/listings" method="post" enctype="multipart/form-data">
        <div class="md-3">
            <label for="title" class="form-lable">title</label><br>
        <input type="text" name="listing[title]" placeholder="enter title" class="form-control">
        </div>
        <br>
        <div class="md-3">
            <label for="description" class="form-lable">description</label>
            <input type="text" name="listing[description]" placeholder="enter description" class="form-control"
            required>
        </div>
        <br>
        <div class="md-3">
            <label for="image" class="form-lable">image</label>
            <input type="file" name="listing[image]" class="form-control" >
        </div>
        
        <br>
        <div class="md-3">
            <label for="price" class="form-lable">price</label>
            <input type="number" name="listing[price]" placeholder="enter price" class="form-control"
            required>
        </div>
        <br>
        <div class="md-3">
            <label for="country" class="form-lable">country</label>
            <input type="text" name="listing[country]" placeholder="enter country" class="form-control" 
            required>
        </div>
        <br>
        <div class="md-3">
            <label for="location" class="form-lable">location</label><br>
            <input type="text" name="listing[location]" placeholder="enter location" class="form-control"
            required>
        </div>
        
        <br>
        <button class="btn btn-dark">add</button>
    </form>
</div>
</body>
