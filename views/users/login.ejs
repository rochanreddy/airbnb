<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-8 offset-2" >login</h1>
    <div class="col-8 offset-2">
        <form action="/login" method="post" class="needs-validation" novalidation >
            <div class="md-3">
                <label for="username" class="form-lable">username</label><br>
            <input type="text" name="username" placeholder="enter username" 
            id="username"
            class="form-control" required >
            
            </div>
            <div class="md-3">
                <label for="password" class="form-lable">password</label><br>
            <input type="text" name="password" placeholder="enter password" 
            id="password"
            class="form-control" required >
            </div>
            <button class="btn btn-success">login</button>
        </form>
    </div>
</div>